import "../script/FlexmlUtils.eol";

rule TESTCASE2XML
	transform testcase: Testcase {
	
	template: "TestXmlFileTemplate.egl"
	
	target: "../generated/current/src-gen/test/resources/xml/" + testcase.name+ ".xml"
	}

rule TESTCASE2JAVA
	transform testcase: Testcase {
	
	template: "TestJavaCodeTemplate.egl"
	
	target: "../generated/current/src-gen/test/java/" + testcase.name.firstToUpperCase() + ".java"
	}
